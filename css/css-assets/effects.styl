.oscillate-eff
	animation oscillate 10s ease infinite

@keyframes oscillate 
	0%, 100%
		transform translateY(0) translateX(0) rotate(0)

	25%
		transform translateY(10px) translateX(0) rotate(2deg)

	50%
		transform translateY(0px) translateX(10px) rotate(-1deg)

	75%
		transform translateY(5px) translateX(5px) rotate(1deg)

.oscillate2-eff
	animation oscillate2 10s ease infinite

@keyframes oscillate2
	0%, 100%
		transform translateY(0) translateX(0) rotate(0)

	25%
		transform translateY(-5px) translateX(2px) rotate(-1deg)

	50%
		transform translateY(10px) translateX(0px) rotate(2deg)

	75%
		transform translateY(-5px) translateX(2px) rotate(1deg)


.oscillate3-eff
	animation oscillate3 10s ease infinite

@keyframes oscillate3
