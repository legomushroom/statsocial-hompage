// EFFECTS
@import '../assets/imports.styl'


@keyframes neon
	0%
		opacity .75

	25%
		opacity 1

	50%
		opacity .65

	75%
		opacity .75

	100%
		opacity .95


translateSize = 100px
@keyframes cloud-float
	0%
		transform translateX(0)

	25%
		transform translateX(- translateSize)

	50%
		transform translateX(translateSize)

	75%
		transform translateX(- translateSize)

	100%
		transform translateX(0)


@keyframes cloud-float-reverse
	0%
		transform translateX(0)

	25%
		transform translateX(translateSize)

	50%
		transform translateX(- translateSize)

	75%
		transform translateX(translateSize)

	100%
		transform translateX(0)


translateSize = 15%
@keyframes rotate
	0%
		transform rotate(0deg) translate3d(0,0,0)

	25%
		transform rotate(90deg) translate3d(translateSize,translateSize,0)
		
	50%
		transform rotate(180deg) translate3d(-translateSize,-translateSize,0)

	75%
		transform rotate(270deg) translate3d(translateSize,translateSize,0)

	100%
		transform rotate(360deg) translate3d(0,0,0)


@keyframes rotateReverse
	0%
		transform rotate(360deg) translate3d(0,0,0)

	25%
		transform rotate(270deg) translate3d(-translateSize,-translateSize,0)
		
	50%
		transform rotate(180deg) translate3d(translateSize,translateSize,0)

	75%
		transform rotate(90deg) translate3d(-translateSize,-translateSize,0)

	100%
		transform rotate(0deg) translate3d(0,0,0)


translateXAmount = 50px
@keyframes snowFall
	0%
		transform rotate(0deg)  translateY(0%)

	100%
		transform rotate(0deg)  translateY(100%)
		

@keyframes snowFall2
	0%
		transform rotate(0deg)  translateY(-100%)

	100%
		transform rotate(0deg)  translateY(0%)
		




