translateSize = 15%
@keyframes rotate
	0%
		transform rotate(0deg) translate3d(0,0,0)

	25%
		transform rotate(90deg) translate3d(translateSize,translateSize,0)
		
	50%
		transform rotate(180deg) translate3d(-translateSize,-translateSize,0)

	75%
		transform rotate(270deg) translate3d(translateSize,translateSize,0)

	100%
		transform rotate(360deg) translate3d(0,0,0)


@keyframes rotateReverse
	0%
		transform rotate(360deg) translate3d(0,0,0)

	25%
		transform rotate(270deg) translate3d(-translateSize,-translateSize,0)
		
	50%
		transform rotate(180deg) translate3d(translateSize,translateSize,0)

	75%
		transform rotate(90deg) translate3d(-translateSize,-translateSize,0)

	100%
		transform rotate(0deg) translate3d(0,0,0)


